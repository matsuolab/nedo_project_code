{
    "train_batch_size": "auto",
    "train_micro_batch_size_per_gpu": "auto",
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": 6e-05,
        "betas": [0.9, 0.999],
        "eps": 1e-08,
        "weight_decay": 0.01
      }
    },
    "scheduler": {
      "type": "WarmupLR",
      "params": {
        "warmup_min_lr": 0,
        "warmup_max_lr": 6e-05,
        "warmup_num_steps": 10
      }
    },
    "fp16": {
      "enabled": true
    },
    "zero_optimization": {
      "stage": 1,
      "allgather_partitions": true,
      "allgather_bucket_size": 2e8,
      "reduce_scatter": true,
      "reduce_bucket_size": 2e8,
      "overlap_comm": true,
      "contiguous_gradients": true
    },
    "gradient_accumulation_steps": 1
  }